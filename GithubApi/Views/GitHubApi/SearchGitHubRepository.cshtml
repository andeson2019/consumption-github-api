@model IEnumerable<GithubApi.ViewModels.GitHubRepositoryViewModel>

    @{
        ViewBag.Title = "Buscar Repositório GitHub";
    }

    <h2>Buscar Repositório GitHub</h2>
    @using (Html.BeginForm("Search", "GitHubApi", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <p>
            <div class="form-inline form-group">
                @Html.Editor("id", new { htmlAttributes = new { placeholder = "Nome do repositório...", @class = "form-control" } })
                <input type="submit" value="Buscar" class="btn btn-default" />
            </div>
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Full_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Updated_at)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Language)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Html_url)
                </th>
                <th></th>
            </tr>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Full_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Updated_at)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Language)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Html_url)
                        </td>
                    </tr>
                }
            }
        </table>
    }